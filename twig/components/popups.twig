            // + конструкция .click устарела, необходимо писать .on('click', function(){})

            $('.check_img').click(function () { // TODO тут так же проблемы с классом и в целом таких классов даже в новом проекте быть не должно. необходимо делать очень конкретные классы что бы понимать к чему относится
                if ($(this).is(":checked")) {
                    add();
                    $(this).parent().parent().addClass('photoOverlay_active');

                } else {
                    remove();
                    $(this).parent().parent().removeClass('photoOverlay_active');

                }
                button();
            });
        };


        checkboxFunction();
        viewPopup();

    });

</script>

